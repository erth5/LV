{
    "private": true,
    "name": "template",
    "description": "template for laravel with webpack and sass, ts",
    "windows_description": "line win works under windows",
    "linux_description": "line lx works under unix/linux/windows with subsystem",
    "scripts": {
        "win": "start npm run watch-poll && start php artisan serve",
        "lx": "start npm run watch-poll & start php artisan serve",
        "bg": "npm run watch",
        "fg": "start php artisan serve",
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production"
    },
    "devDependencies": {
        "axios": "^0.25",
        "browser-sync": "^2.27.9",
        "laravel-mix": "^6.0.43",
        "lodash": "^4.17.19",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.1.14",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.49.8",
        "sass-loader": "^12.1.0",
        "ts-loader": "^9.2.6",
        "typescript": "^4.5.5"
    }
}
